extends layout

block content
  .countryContainer
    each country in countrys
      .countryItem
        a(href='/countries/'+country.name)
          p.country #{country.name}
          img.country(src='images/'+country.pictures[1])
    .countryItem(style=':hover{}')
        p(style='font-size: 20px;font-style: italic;color:#0d47a1;margin-bottom: 0px;font-weight: bold;width:200px') Meer landen in aantocht!
        img.country(src='images/comming_soon.png')
    
